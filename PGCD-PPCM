"""
Programme pour calculer le PGCD et le PPCM de deux nombres
"""

def calcul_pgcd(a, b):
    """Calcule le PGCD en utilisant l'algorithme d'Euclide"""
    print("üìä Calcul du PGCD avec l'algorithme d'Euclide :")
    print(f"D√©but : a = {a}, b = {b}")
    
    # Garder les valeurs originales pour l'affichage
    original_a, original_b = a, b
    
    # Algorithme d'Euclide
    while b != 0:
        quotient = a // b
        reste = a % b
        print(f"{a} = {b} √ó {quotient} + {reste}")
        a, b = b, reste
    
    pgcd = abs(a)  # PGCD est toujours positif
    print(f"‚úÖ PGCD({original_a}, {original_b}) = {pgcd}")
    return pgcd

def calcul_ppcm(a, b):
    """Calcule le PPCM en utilisant la formule : PPCM(a,b) = |a*b| / PGCD(a,b)"""
    pgcd = calcul_pgcd(a, b)
    ppcm = abs(a * b) // pgcd
    print(f"‚úÖ PPCM({a}, {b}) = |{a} √ó {b}| / {pgcd} = {ppcm}")
    return ppcm

def verifier_resultats(a, b, pgcd, ppcm):
    """V√©rifie les r√©sultats avec des tests"""
    print("\nüîç V√©rification des r√©sultats :")
    print(f"‚Ä¢ {a} √∑ {pgcd} = {a // pgcd} (division exacte)")
    print(f"‚Ä¢ {b} √∑ {pgcd} = {b // pgcd} (division exacte)")
    print(f"‚Ä¢ {ppcm} √∑ {a} = {ppcm // a} (division exacte)")
    print(f"‚Ä¢ {ppcm} √∑ {b} = {ppcm // b} (division exacte)")

# === INTERFACE UTILISATEUR ===
print("=" * 50)
print("üßÆ CALCULATRICE PGCD & PPCM")
print("=" * 50)

# Saisie des nombres
try:
    nombre1 = int(input("Entrez le premier nombre : "))
    nombre2 = int(input("Entrez le deuxi√®me nombre : "))
    
    print("\n" + "=" * 50)
    print(f"üìù Nombres saisis : {nombre1} et {nombre2}")
    print("=" * 50)
    
    # Calculs
    print("\nüßÆ CALCUL DU PGCD :")
    pgcd_resultat = calcul_pgcd(nombre1, nombre2)
    
    print("\nüßÆ CALCUL DU PPCM :")
    ppcm_resultat = calcul_ppcm(nombre1, nombre2)
    
    # V√©rification
    verifier_resultats(nombre1, nombre2, pgcd_resultat, ppcm_resultat)
    
    # R√©sum√© final
    print("\n" + "‚≠ê" * 50)
    print("üìä R√âSULTATS FINAUX :")
    print(f"   PGCD({nombre1}, {nombre2}) = {pgcd_resultat}")
    print(f"   PPCM({nombre1}, {nombre2}) = {ppcm_resultat}")
    print("‚≠ê" * 50)
    
    # Relation entre PGCD et PPCM
    print(f"\nüí° Relation : PGCD √ó PPCM = {pgcd_resultat} √ó {ppcm_resultat} = {pgcd_resultat * ppcm_resultat}")
    print(f"   {nombre1} √ó {nombre2} = {nombre1 * nombre2}")
    print(f"   V√©rification : {pgcd_resultat * ppcm_resultat} = {nombre1 * nombre2} ‚úì")
    
except ValueError:
    print("‚ùå Erreur : Veuillez entrer des nombres entiers valides !")
except ZeroDivisionError:
    print("‚ùå Erreur : La division par z√©ro n'est pas possible !")